<% content_for :title do %>HADashboard<% end %>




<div class="gridster">
  <ul>
<!-- 
  =================================
    Modes, time, weather
  =================================
 -->

    <li data-row="1" data-col="3" data-sizex="2" data-sizey="2">
      <div data-id="weather" data-view="Stweather"></div>
    </li>


    <li data-row="2" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="mode" data-view="Stmode" data-title="Current Mode"></div>
    </li>


    <li data-row="3" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="eveningmode" data-view="Stmodechange" data-title="Evening" data-icon="moon-o" data-changemode="Evening" data-phrase="Evening!" data-countdown="0"></div>
    </li>

    <li data-row="3" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="nightmode" data-view="Stmodechange" data-title="Good Night" data-icon="bed" data-changemode="Night" data-phrase="Good Night!" data-countdown="30"></div>
    </li>


    <li data-row="3" data-col="7" data-sizex="1" data-sizey="1">
      <div data-id="cpage1" data-view="Changepage" data-icon="arrow-right" data-title="Basement" data-page="2" data-stagger="false" data-fasttransition="true"></div>
    </li>

<!-- 
  =================================
    Doors
  =================================
 -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="garagedualcontact" data-view="Stcontact" data-title="Garage (2)" data-device="Garage Double Sensor"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="garagesinglecontact" data-view="Stcontact" data-title="Garage (1)" data-device="Garage Single Sensor"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="frontdoor" data-view="Stcontact" data-title="Front door" data-device="Front Door Sensor"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="garageentrydoor" data-view="Stcontact" data-title="Garage Entry" data-device="Garage Entry Sensor"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="patiosliderdoor" data-view="Stcontact" data-title="Patio Door" data-device="Patio Slider Sensor"></div>
    </li>


<!-- 
  =================================
    Lighting
  =================================
 -->

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="familyall" data-view="Stdimmer" data-title="Family Main" data-device="Family Room Main Switch"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="mantlelights" data-view="Stdimmer" data-title="Mantle Lights" data-device="Family Room Fireplace Lights Switch"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="sofalamp" data-view="Stswitch" data-title="Sofa Lamp" data-device="Family Room Lamp Plug"></div>
    </li>

  </ul>
</div>



